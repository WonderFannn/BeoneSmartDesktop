<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_recreation_movie"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:adjustViewBounds="false"
                android:focusable="true"
                android:padding="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/recreation_imgbtn_movie" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_recreation_info_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:focusable="true"
                    android:padding="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recreation_imgbtn_info_video" />

                <ImageView
                    android:id="@+id/btn_recreation_music"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:focusable="true"
                    android:padding="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recreation_imgbtn_music" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_recreation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:focusable="true"
                android:padding="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/recreation_imgbtn_tv" />

            <ImageView
                android:id="@+id/btn_recreation_variety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:focusable="true"
                android:padding="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/recreation_imgbtn_variety" />

            <ImageView
                android:id="@+id/btn_recreation_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:focusable="true"
                android:padding="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/recreation_imgbtn_child" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_recreation_sports"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:focusable="true"
                android:padding="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/recreation_imgbtn_sports" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_recreation_cartoon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:focusable="true"
                    android:padding="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recreation_imgbtn_cartoon" />

                <ImageView
                    android:id="@+id/btn_recreation_documentary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:focusable="true"
                    android:padding="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recreation_imgbtn_documentary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_recreation_opera"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:focusable="true"
                    android:padding="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recreation_imgbtn_opera" />

                <ImageView
                    android:id="@+id/btn_recreation_app_recommend"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="false"
                    android:focusable="true"
                    android:padding="5dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/recreation_imgbtn_app_recommend" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>
